<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mr_m"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/standard_width"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_ribbon"
            android:clickable="false" />

        <TextView
            android:id="@+id/result_item_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pd_m"
            android:layout_marginStart="@dimen/mr_m"
            android:text="Ca + O -> CaO"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_sz_m" />
    </LinearLayout>

</android.support.v7.widget.CardView>